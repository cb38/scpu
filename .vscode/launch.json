{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug CPU Simulator",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/hw/gen/sim/cpu_sim",
            "args": ["+program=asm/cpu.asm", "+verbose=1"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build-simulation",
            "postDebugTask": "clean-build"
        }
    ]
}
