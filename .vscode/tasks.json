{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-simulation",
            "type": "shell",
            "command": "make",
            "args": ["compile"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "run-simulation",
            "type": "shell",
            "command": "make",
            "args": ["sim"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "clean-build",
            "type": "shell",
            "command": "make",
            "args": ["clean"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "view-waveform",
            "type": "shell",
            "command": "gtkwave",
            "args": ["${workspaceFolder}/hw/gen/sim/waveform.fst"],
            "presentation": {
                "echo": true,
                "reveal": "always"
            }
        }
    ]
}
